	"cloudflare": {
		"label": "Universal Webhook API",
		"products": [
			"Workers",
			"D1",
			"R2"
		],
		"categories": [
			"storage"
		],
		"publish": true
	},
	"dependencies": {
		"hono": "4.11.1"
	},
	"devDependencies": {
		"@cloudflare/vitest-pool-workers": "0.10.11",
		"@types/node": "24.10.1",
		"typescript": "5.9.3",
		"vitest": "3.2.4",
		"wrangler": "4.56.0"
	},
	"private": true,
	"scripts": {
		"cf-typegen": "wrangler types",
		"deploy": "wrangler deploy",
		"dev": "npm run seedLocalDb && wrangler dev",
		"predeploy": "wrangler d1 migrations apply DB --remote",
		"seedLocalDb": "wrangler d1 migrations apply DB --local"
	}
